<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape android:shape="line">
            <stroke
                android:width="@dimen/dimenSeekBarWidth"
                android:color="@color/colorSeekBar"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="line">
                <stroke
                    android:width="@dimen/dimenSeekBarProgressWidth"
                    android:color="@color/colorSeekBarProgressRed"/>
            </shape>
        </clip>
    </item>
</layer-list>