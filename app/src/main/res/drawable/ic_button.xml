<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPaletteGreyLight"/>
            <corners android:radius="@dimen/dimenButtonRadius"/>
            <padding
                android:bottom="@dimen/dimenButtonPaddingTopBottom"
                android:top="@dimen/dimenButtonPaddingTopBottom"
                android:left="@dimen/dimenButtonPaddingLeftRight"
                android:right="@dimen/dimenButtonPaddingLeftRight"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPaletteGreyBlue"/>
            <corners android:radius="@dimen/dimenButtonRadius"/>
            <padding
                android:bottom="@dimen/dimenButtonPaddingTopBottom"
                android:top="@dimen/dimenButtonPaddingTopBottom"
                android:left="@dimen/dimenButtonPaddingLeftRight"
                android:right="@dimen/dimenButtonPaddingLeftRight"/>
        </shape>
    </item>
</selector>