<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimenRecycledItemWeight"
    android:layout_height="@dimen/dimenRecycledItemHeight"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/dimenRecycledItemCorner"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btdevice_avaible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/imageConnectRecycledAvaible"
            android:layout_marginTop="@dimen/dimenRecycledItemInnerMargin"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/btdevice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:textColor="@color/colorRecycledItemAvaible"
            tools:text="LIGHT"
            android:layout_below="@+id/btdevice_avaible"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimenRecycledItemInnerMargin"
            android:layout_marginLeft="@dimen/dimenRecycledItemInnerMargin"
            android:layout_marginRight="@dimen/dimenRecycledItemInnerMargin"
            android:maxLines="1"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/btdevice_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            android:textColor="@color/colorRecycledItemAddr"
            tools:text="00:15:FF:F2:19:4C"
            android:layout_below="@+id/btdevice_name"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

